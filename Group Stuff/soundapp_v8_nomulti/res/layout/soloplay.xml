	        android:text="@string/fluteC2"
	        android:textColor="@color/blue" />
	    
	    <Button
	        android:id="@+id/flutebkey"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginLeft="154dp"
	        android:layout_marginTop="233dp"
