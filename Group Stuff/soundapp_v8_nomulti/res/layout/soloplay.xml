	        android:text="@string/fluteG"
	        android:textColor="@color/blue" />
	    
	    <Button
	        android:id="@+id/flutefkey"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginLeft="195dp"
