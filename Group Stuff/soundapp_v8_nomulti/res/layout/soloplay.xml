	        android:layout_marginLeft="260dp"
	        android:layout_marginTop="312dp"
	        android:text="@string/D" />
	
	    <Button
	        android:id="@+id/guitarFsharpkey"
	        style="@style/guitarkeysharp"
	        android:layout_marginLeft="168dp"
	        android:layout_marginTop="172dp"
